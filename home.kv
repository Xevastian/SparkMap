WindowManager:
    HomeLayout:
    ConversionTab:
    CalculatorTab:
    GraphTab:
    HistoryTab:
    ErrorTab:
    EducationTab:

<HomeLayout>:
    name: "main"

    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Electrical Unit Conversion"
            on_release:
                app.root.current = "screen1"
                root.manager.transition.direction = "left"
        Button:
            text: "Calculator"
            on_release:
                app.root.current = "screen2"
                root.manager.transition.direction = "left"
        Button:
            text: "Graphical Representation"
            on_release:
                app.root.current = "screen3"
                root.manager.transition.direction = "left"
        Button:
            text: "Historical Data"
            on_release:
                app.root.current = "screen4"
                root.manager.transition.direction = "left"
        Button:
            text: "Troubleshooting Tool"
            on_release:
                app.root.current = "screen5"
                root.manager.transition.direction = "left"
        Button:
            text: "Educational Resources" 
            on_release:
                app.root.current = "screen6"
                root.manager.transition.direction = "left"

<ConversionTab>:
    name: "screen1"
    size: root.width, root.height
    
    BoxLayout:
        orientation: "vertical"
        Button:
            size_hint: 1, .3
            text: "Go Back"
            # text_size: self.size
            # halign: "left"
            # valign: "middle"
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "right"

        Label: 
            id: click_label
            text: "Electrical Unit Conversion"
            font_size: 20
        Spinner:
            size_hint: .2, .2
            id: spinner_id
            text: "Convert from"
            values: ["Volts", "Watts", "Kilowatts", "Amperes", "Milliamperes", "Kiloamperes", "Megaamperes", "Frequency"]
            on_text: root.spinner_clicked(spinner_id.text)
        Spinner:
            size_hint: .2, .2
            id: spinner_id
            text: "Convert to"
            values: ["Volts", "Watts", "Kilowatts", "Amperes", "Milliamperes", "Kiloamperes", "Megaamperes", "Frequency"]
            on_text: root.spinner_clicked(spinner_id.text)
        Label:
            text: ''
        Label:
            text: ''


